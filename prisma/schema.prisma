generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Event {
  id              String        @id @default(cuid())
  title           String
  location        String?
  description     String?
  category        EventCategory
  isTimeout       Boolean       @default(false)
  start           DateTime
  end             DateTime
  allDay          Boolean       @default(false)
  includedGroups  String?
  status          EventStatus   @default(DRAFT)
  createdById     String?
  reviewedById    String?
  reviewedAt      DateTime?
  rejectionReason String?

  Record     Record[]
  createdBy  User?    @relation("EventCreator", fields: [createdById], references: [id])
  reviewedBy User?    @relation("EventReviewer", fields: [reviewedById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdById])
}

model Student {
  id             String        @id
  lastName       String
  firstName      String
  middleName     String?
  shsStrand      String? // required if schoolLevel = SHS
  collegeProgram String? // required if schoolLevel = COLLEGE
  section        String
  yearLevel      YearLevel
  schoolLevel    SchoolLevel
  status         StudentStatus @default(ACTIVE)
  contactNumber  String?
  department     String?
  departmentSlug String?
  house          String?
  houseSlug      String?
  Record         Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id        String           @id @default(cuid())
  eventId   String
  event     Event            @relation(fields: [eventId], references: [id])
  studentId String
  student   Student          @relation(fields: [studentId], references: [id])
  method    AttendanceMethod
  timein    DateTime?
  timeout   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, studentId])
}

model User {
  id              String     @id @default(cuid())
  name            String
  role            UserRole   @default(ORGANIZER)
  email           String     @unique
  password        String
  status          UserStatus @default(PENDING)
  rejectionReason String?
  createdEvents   Event[]    @relation("EventCreator")
  reviewedEvents  Event[]    @relation("EventReviewer")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ORGANIZER
  ADMIN
}

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
}

enum EventStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

enum AttendanceMethod {
  MANUAL
  SCANNED
}

enum YearLevel {
  YEAR_1
  YEAR_2
  YEAR_3
  YEAR_4
  GRADE_11
  GRADE_12
}

enum SchoolLevel {
  SHS
  COLLEGE
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
  DROPPED
}

enum EventCategory {
  ALL
  COLLEGE
  SHS
  DEPARTMENT
  HOUSE
  STRAND
  PROGRAM
  SECTION
  YEAR
}
