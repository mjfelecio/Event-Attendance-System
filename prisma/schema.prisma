generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  location    String?
  description String?
  category    String
  start       DateTime
  end         DateTime
  allDay      Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  Record Record[]
  User   User     @relation(fields: [userId], references: [id])
  userId String
}

model Student {
  id             Int           @id
  name           String
  shsStrand      String? // required if schoolLevel = SHS
  collegeProgram String? // required if schoolLevel = COLLEGE
  section        String
  yearLevel      YearLevel
  schoolLevel    SchoolLevel
  status         StudentStatus @default(ACTIVE)
  contactNumber  String?
  Record         Record[]
}

model Record {
  id        String           @id @default(cuid())
  eventId   String
  event     Event            @relation(fields: [eventId], references: [id])
  studentId Int
  student   Student          @relation(fields: [studentId], references: [id])
  status    AttendanceStatus @default(PRESENT)
  method    AttendanceMethod
}

model User {
  id       String   @id @default(cuid())
  name     String
  role     UserRole @default(ORGANIZER)
  email    String   @unique
  password String
  Event    Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ORGANIZER
  ADMIN
}

enum AttendanceMethod {
  MANUAL
  SCANNED
}

enum AttendanceStatus {
  PRESENT
  LATE
  EXCUSED
  ABSENT
}

enum YearLevel {
  YEAR_1
  YEAR_2
  YEAR_3
  YEAR_4
  GRADE_11
  GRADE_12
}

enum SchoolLevel {
  SHS
  COLLEGE
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
  DROPPED
}
